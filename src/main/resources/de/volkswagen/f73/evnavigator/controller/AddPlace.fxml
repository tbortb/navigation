<HBox fx:id="placeBox" alignment="CENTER" minHeight="700.0" minWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.volkswagen.f73.evnavigator.controller.AddPlace">
   <children>
      <MapView fx:id="map" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="400.0" minWidth="400.0" prefHeight="433.0" prefWidth="466.0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="30.0" right="30.0" />
         </HBox.margin>
      </MapView>
      <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </HBox.margin>
         <children>
            <GridPane alignment="CENTER" prefHeight="640.0" prefWidth="600.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="299.0" minWidth="10.0" prefWidth="114.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="519.0" minWidth="10.0" prefWidth="493.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
