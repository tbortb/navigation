                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Name" GridPane.rowIndex="1" />
                  <Label text="Latitude" GridPane.rowIndex="2" />
                  <Label text="Longitude" GridPane.rowIndex="3" />
                  <TextField fx:id="nameInput" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="latitudeInput" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="longitudeInput" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <Button onAction="#savePlace" mnemonicParsing="false" text="Save" />
         </children>
      </VBox>
   </children>
</HBox>
